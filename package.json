{
  "displayName": "Naim Audio",
  "name": "homebridge-naim-audio",
  "version": "1.2.5",
  "description": "Control your Naim Audio receivers directly in the Apple Home App",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
